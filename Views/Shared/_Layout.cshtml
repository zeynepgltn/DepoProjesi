<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DepoProjesi</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/lux/bootstrap.min.css">

    <!-- Proje CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DepoProjesi.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand text-white" href="/">Depo Projesi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Product" asp-action="List">Ürünler</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Product" asp-action="Create">Ürün Ekle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Product" asp-action="DeleteProductView">Ürün Sil</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                    Ürün Güncelle
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="UpdateProductView">Tüm Bilgileri Güncelle</a></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="UpdateStockView">Sadece Stok Güncelle</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="stockDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Stok Takip
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Stock" asp-action="Tracking">Düşük Stok</a></li>
                                    <li><a class="dropdown-item" asp-controller="Stock" asp-action="Tuketim">Tüketim Analizi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Stock" asp-action="Chart">Stok Değişim Grafiği</a></li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- SAYFA İÇERİĞİ -->
    <main class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-light text-center py-3 mt-auto border-top">
        <div class="container">
            &copy; 2025 - DepoProjesi - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- jQuery mutlaka en önce -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Chart.js CDN'ini -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Senin site.js'in -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Razor sayfalardaki scriptler için -->
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
